<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_card_name_textfield"
        android:textSize="@dimen/text_size_artist_name"
        android:layout_alignParentBottom="false"
        android:textColor="@color/bete_humaine_color_clear"
        android:textStyle="bold"
        android:background="@color/bete_humaine_color_dark"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:padding="@dimen/padding_artist_card_text" />

    <!-- to use with BottomCrop and custom loading
    <fr.shining_cat.labetehumaine.tools.BottomCropImage
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/artist_card_face_image_view"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/artist_card_name_textfield"
        android:layout_alignParentBottom="true" /> -->

    <!-- for testing with picasso :-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/artist_card_face_image_view"
        android:adjustViewBounds="true"
        android:layout_below="@+id/artist_card_name_textfield"
        android:layout_alignParentBottom="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_card_description_textfield"
        android:textSize="@dimen/text_size_artist_description"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/bete_humaine_color_clear"
        android:background="@color/bete_humaine_color_dark_semi_transparent"
        android:padding="@dimen/padding_artist_card_text" />

</RelativeLayout>